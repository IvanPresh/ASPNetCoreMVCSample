@model X.PagedList.IPagedList<ProductModel>
@using X.Web.PagedList

<h4> This is the index for Product Contoller </h4>
<h6> Welcome </h6>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Price</th>
			<th>Quantity</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var prod in Model)
		{
			<tr>
				<td>@prod.Name</td>
				<td>@prod.Description</td>
				<td>&#x20A6; @prod.Price.ToString("N")</td>
				<td>@prod.Quantity</td>
			</tr>
		}
	</tbody>
</table>
<div class="pagination">
	@Html.PagedListPager(Model, page => Url.Action("Visitor", "Product", new { page }))
</div>