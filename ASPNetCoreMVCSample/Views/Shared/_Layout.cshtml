<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <!-- Ensures the page is scaled correctly on mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - ASPNetCoreMVCSample</title>

    <!-- Link to Bootstrap CSS for styling the page -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Linking the site.css with HTML -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/ASPNetCoreMVCSample.styles.css" asp-append-version="true" />

    <link href="~/css/splide.min.css" rel="stylesheet" />

    <!-- CSS for pagination styling -->
    <link href="~/css/pagedlist.css" rel="stylesheet"/>
</head>
<body>
    <header>
        <!-- Navigation bar for the site -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Brand/logo of the site, linked to the Home page -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">JP CRYSTAL COMPANY</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Navigation links to different pages -->
                        <li class="nav-item">
                            <!-- <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a> -->
                        </li>
                        <li class="nav-item">
                            <!-- <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> -->
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">All Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                        </li>
                    </ul>
                </div>
                <div>
                    <!-- Check if the user is authenticated (logged in) -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Display the first name of the logged-in user -->
                        var firstnameClaim = User.Claims.FirstOrDefault(x => x.Type == "firstname");
                        <span class="navbar-text">
                            Welcome, @firstnameClaim?.Value!
                        </span>
                        <!-- Form for logging out the user -->
                        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="d-inline">
                            <input type="hidden" asp-antiforgery="true" />

                            <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link d-inline">Logout</a>
                        </form>
                    }
                    else
                    {
                        <!-- If the user is not logged in, show a login link -->
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Account/Login">Login</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <h4>ECOMMERCE</h4>

            @RenderBody()
        </main>
    </div>

    <!-- Footer section of the page -->
    <footer class="border-top footer text-muted">
        <div class="container">
            <!-- Add Privacy link to the footer for easy access -->
            &copy; @DateTime.Now.Year - JP Crystal Company - <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <!-- jQuery library for handling events, animations, and AJAX interactions -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/splide.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
