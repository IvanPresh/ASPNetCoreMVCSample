@model ASPNetCoreMVCSample.Models.RegisterModel

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <!-- Header for the registration page -->
            <h2 class="text-center text-dark mt-5">Register</h2>

            <div class="text-center mb-5 text-dark"></div>
            <div class="card my-5">

                <!-- Form for user registration -->
                <form class="card-body cardbody-color p-lg-5" asp-controller="Account" asp-action="Register" method="post">
                    <div asp-validation-summary="All" class="text-danger">
                    </div>
                    <!-- Profile image placeholder -->
                    <div class="text-center">
                        <!-- Replace src with a valid URL if you want to display a profile picture -->
                        <img src="" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                             width="200px" alt="profile">
                    </div>

                    <!-- Username input field -->
                    <div class="mb-3">
                        <input type="text" class="form-control" id="Username" aria-describedby="usernameHelp"
                               placeholder="User Name" asp-for="Username">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <input type="password" class="form-control" id="Password" placeholder="Password" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <input type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm Password" asp-for="ConfirmPassword">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <input type="text" class="form-control" id="FirstName" aria-describedby="firstNameHelp"
                               placeholder="First Name" asp-for="FirstName">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <input type="text" class="form-control" id="LastName" aria-describedby="lastNameHelp"
                               placeholder="Last Name" asp-for="LastName">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <!-- Submit button -->
                    <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Sign Up</button></div>

                    <!-- Link for users who are not registered -->
                    <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                        Not Registered? <a href="#" class="text-dark fw-bold">
                            Create an Account
                        </a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}